<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />*@
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a href="/"><img src="~/img/cinema.png" alt="Whitesquare logo" width="30"></a>
                <a class="navbar-brand" href="../../Home/Index">АнтиКинотеатр</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse ">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link text-info" href="/Home/Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-info" href="/Movies/List">Все Фильмы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Movies/List/Horror">Ужасы</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Movies/List/Comedy">Комедия</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Movies/List/Thriller">Триллер</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Movies/List/Fantasy">Фэнтези</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Movies/List/Drama">Драма</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="https://www.xbox.com/en-GB/xbox-game-pass/games"  target="_blank">Библиотека игр</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <a class="nav-link text-info" href="/Order/Checkout/">Забронировать зал</a>
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-5">
        @RenderBody()
    </div> 

    <script src="~/js/bootstrap.min.js"></script>

</body>
</html>
