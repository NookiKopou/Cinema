<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a href="/"><img src="~/img/cinema.png" alt="Whitesquare logo" width="30"></a>
                <a class="navbar-brand" href="../../Home/Index">АнтиКинотеатр</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Movies/List">Все Фильмы</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Movies/List/Horror">Ужасы</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Movies/List/Comedy">Комедия</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Movies/List/Thriller">Триллер</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Movies/List/Fantasy">Фэнтези</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Movies/List/Drama">Драма</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/CinemaCart/">Корзина</a>
                    </li>
                </ul>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Identity/Account/Register">Регистрация</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Identity/Account/Login">Вход</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-light footer text-muted position-absolute">
        <div class="container">
            &copy;  Разработка и дизайн <a href="/Privacy">NookiKopou</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>